<article id="tease-{{post.id}}" class="tease tease-{{post.post_type}} col-xs-12 col-md-6 post-format-{{post.format}}">
	{% block content %}
		<div class="row">
			{% if post.get_thumbnail %}
			<div class="col-xs-12 col-md-4">
				<a href="{{post.link}}">
				<picture>
					<img src="{{post.thumbnail.src|resize(320, 450)}}" />
				</picture>
				</a>
			</div>
			{% endif %}
			<div class="col-xs-12 {% if post.get_thumbnail %}col-md-8{% endif %}">
				<div class="date">{{post.date}}</div>
				<h2><a href="{{post.link}}">{{post.title}}</a></h2>
				<p>{{post.preview.length(45)}}</p>

			</div>
		</div>
		<a class="more-link" href="{{post.link}}">{{ __('zobacz wiÄ™cej','medpoint') }}</a>
	{% endblock %}
</article>