{% extends "base.twig" %}

{% block content %}
<div class="container-fluid {{sidebar_class}}">
	<div class="row">
		<div class="col-xs-12">
			<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
				<section class="article-content">
					<div class="article-body">
						{{post.content}}
					</div>
				</section>
			</article>
		</div>
	</div><!-- /content-wrapper -->
</div>
{% endblock %}